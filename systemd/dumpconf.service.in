[Unit]
Description=Configure dump on panic for System z
ConditionVirtualization=!lxc
After=network.target

[Service]
Type=oneshot
ExecStart=@toolslib_path@/dumpconf start
ExecStop=@toolslib_path@/dumpconf stop
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target
